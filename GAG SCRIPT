local function createButton(text, position)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.8, 0, 0, 40)
	btn.Position = position
	btn.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
	btn.Text = text
	btn.Font = Enum.Font.GothamBold
	btn.TextColor3 = Color3.new(1,1,1)
	btn.TextSize = 18
	btn.Parent = Frame
	btn.AutoButtonColor = true
	btn.BorderSizePixel = 0
	local btnCorner = Instance.new("UICorner", btn)
	btnCorner.CornerRadius = UDim.new(0, 10)
	return btn
end

local function fakeProgress(button, originalText)
	task.spawn(function()
		for i = 1, 100, 5 do
			button.Text = "Progress: " .. i .. "%"
			task.wait(0.03)
		end
		button.Text = "âœ… Successful!"
		task.wait(1.2)
		button.Text = originalText
	end)
end

local AntiCheatButton = createButton("Disable Anti Cheat", UDim2.new(0.1, 0, 0.35, 0))
local FreezeTradeButton = createButton("Freeze Trade", UDim2.new(0.1, 0, 0.6, 0))

AntiCheatButton.MouseButton1Click:Connect(function()
	fakeProgress(AntiCheatButton, "Disable Anti Cheat")
end)

FreezeTradeButton.MouseButton1Click:Connect(function()
	fakeProgress(FreezeTradeButton, "Freeze Trade")
end)

